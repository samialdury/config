{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:js-lib",
        ":semanticCommits",
        ":timezone(Europe/Prague)",
        "schedule:monthly",
        ":disableRateLimiting",
        ":label(dependencies)",
        ":separateMultipleMajorReleases",
        ":automergePr",
        ":automergeRequireAllStatusChecks",
        ":automergeDigest",
        ":automergeMinor",
        ":automergePatch",
        ":automergeLinters",
        ":automergeTesters",
        ":automergeTypes",
        "group:allNonMajor",
        "group:definitelyTyped",
        "group:jsTestNonMajor",
        "group:linters"
    ],
    "platformCommit": true,
    "platformAutomerge": true
}
